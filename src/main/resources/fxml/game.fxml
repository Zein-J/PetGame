<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.GameController"
      spacing="10" alignment="CENTER" styleClass="game">

    <StackPane VBox.vgrow="ALWAYS">
        <ImageView fx:id="moleSprite"
                  fitWidth="300"
                  fitHeight="300"
                  preserveRatio="true"
                  styleClass="mole-sprite">
            <image>
                <Image url="@../images/mole.png" />
            </image>
        </ImageView>
    </StackPane>

    <Button fx:id="backButton" text="Back" onAction="#goBack" />
</VBox>
